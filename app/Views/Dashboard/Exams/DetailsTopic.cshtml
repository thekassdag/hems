@model HMS.Models.ExamTopic

@{
    ViewData["Title"] = "Exam Topic Details";
}

<h1>Exam Topic Details</h1>

<div>
    <h4>ExamTopic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Exam Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exam!.Title)
        </dd>
        <dt class = "col-sm-2">
            Topic Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic!.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalQuestions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalQuestions)
        </dd>
        <dt class = "col-sm-2">
            Instructor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User!.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Model.Deadline.ToString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditTopic" asp-route-examId="@Model.ExamId" asp-route-examTopicId="@Model.Id">Edit</a> |
    <a asp-action="Details" asp-route-id="@Model.ExamId">Back to Exam Details</a>
</div>
