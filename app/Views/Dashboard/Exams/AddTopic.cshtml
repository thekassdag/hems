@model HMS.Models.ExamTopic

@{
    ViewData["Title"] = "Add Topic to Exam";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Add Topic to Exam</h1>

<h4>ExamTopic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Dashboard"
      asp-controller="ExamTopics"
      asp-action="Add"
      method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExamId" />
            <div class="form-group">
                <label asp-for="TopicId" class="control-label"></label>
                <select asp-for="TopicId" class="form-control" asp-items="@(new SelectList(ViewBag.Topics, "Id", "Title"))"></select>
                <span asp-validation-for="TopicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalQuestions" class="control-label"></label>
                <input asp-for="TotalQuestions" class="form-control" />
                <span asp-validation-for="TotalQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="@(new SelectList(ViewBag.Instructors, "Id", "FullName"))"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" type="datetime-local" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Dashboard" asp-controller="Exams" asp-action="Details" asp-route-id="@ViewBag.ExamId">Back to Exam Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
