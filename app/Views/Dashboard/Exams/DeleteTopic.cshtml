@model HMS.Models.ExamTopic

@{
    ViewData["Title"] = "Delete Exam Topic";
}

<h1>Delete Exam Topic</h1>

<h3>Are you sure you want to delete this exam topic?</h3>
<div>
    <h4>ExamTopic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Exam Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exam!.Title)
        </dd>
        <dt class = "col-sm-2">
            Topic Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic!.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalQuestions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalQuestions)
        </dd>
        <dt class = "col-sm-2">
            Instructor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User!.FullName)
        </dt>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Model.Deadline.ToString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-examId="@ViewBag.ExamId" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Exams" asp-action="Details" asp-route-id="@ViewBag.ExamId">Back to Exam Details</a>
    </form>
</div>
